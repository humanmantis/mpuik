{
    "kind": "collectionType",
    "collectionName": "locations",
    "info": {
        "name": "Location",
        "displayName": "Розташування"
    },
    "options": {
        "increments": true,
        "timestamps": true,
        "draftAndPublish": true
    },
    "attributes": {
        "title": {
            "type": "string"
        },
        "address": {
            "type": "string",
            "required": true
        },
        "phone": {
            "type": "string",
            "unique": false,
            "required": true
        },
        "email": {
            "type": "email",
            "required": true
        },
        "list": {
            "type": "component",
            "repeatable": true,
            "component": "list.list"
        },
        "latitude": {
            "type": "string",
            "required": true
        },
        "longitude": {
            "type": "string",
            "required": true
        }
    }
}